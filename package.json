{
  "packageManager": "pnpm@10.20.0",
  "name": "engramma",
  "author": "Bogdan Chadkin",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:readonly": "ENGRAMMA_READ_ONLY=true vite",
    "build": "vite build",
    "build:readonly": "ENGRAMMA_READ_ONLY=true vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write .",
    "test": "vitest run",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  },
  "nano-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-svelte"
    ]
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.1",
    "@atlaskit/pragmatic-drag-and-drop": "^1.7.7",
    "@atlaskit/pragmatic-drag-and-drop-hitbox": "^1.1.0",
    "@floating-ui/dom": "^1.7.4",
    "@lucide/svelte": "^0.562.0",
    "@oddbird/popover-polyfill": "^0.6.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.6",
    "@types/prismjs": "^1.26.5",
    "change-case": "^5.4.4",
    "colorjs.io": "^0.6.1",
    "dialog-closedby-polyfill": "^1.1.0",
    "fractional-indexing": "^3.2.0",
    "hdr-color-input": "^0.2.5",
    "interestfor": "^1.0.7",
    "invokers-polyfill": "^0.6.1",
    "json-stringify-pretty-compact": "^4.0.0",
    "keyux": "^0.11.3",
    "nano-staged": "^0.9.0",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prismjs": "^1.30.0",
    "simple-git-hooks": "^2.13.1",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.5",
    "title-case": "^4.3.2",
    "typescript": "^5.9.3",
    "typescript-svelte-plugin": "^0.3.50",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vitest": "^4.0.17",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.10"
  }
}
