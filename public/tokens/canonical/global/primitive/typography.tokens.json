{
  "$schema": "https://designtokens.org/schemas/2025.10/format.json",
  "typography": {
    "fontFamily": {
      "$type": "fontFamily",
      "sansSerif": {
        "$value": [
          "Ubuntu Sans",
          "Ubuntu",
          "Cantarell",
          "Adwaita Sans",
          "Noto Sans",
          "Oxygen",
          "-apple-system",
          "BlinkMacSystemFont",
          "Segoe UI",
          "Roboto",
          "Noto Color Emoji",
          "Apple Color Emoji",
          "Segoe UI Emoji",
          "sans-serif"
        ],
        "$description": "Sans-serif font stack with Ubuntu Sans as primary"
      },
      "monospace": {
        "$value": [
          "Ubuntu Sans Mono",
          "Ubuntu Mono",
          "Noto Color Emoji",
          "Adwaita Mono",
          "Source Code Pro",
          "Hack",
          "ui-monospace",
          "SF Mono",
          "Apple Color Emoji",
          "Cascadia Code",
          "Consolas",
          "Segoe UI Emoji",
          "Roboto Mono",
          "monospace"
        ],
        "$description": "Monospace font stack with Ubuntu Sans Mono as primary"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "thin": {
        "$value": 100,
        "$description": "Thin font weight"
      },
      "extraLight": {
        "$value": 200,
        "$description": "Extra light font weight"
      },
      "light": {
        "$value": 300,
        "$description": "Light font weight"
      },
      "regular": {
        "$value": 400,
        "$description": "Regular font weight"
      },
      "medium": {
        "$value": 500,
        "$description": "Medium font weight"
      },
      "semiBold": {
        "$value": 600,
        "$description": "Semi-bold font weight"
      },
      "bold": {
        "$value": 700,
        "$description": "Bold font weight"
      },
      "extraBold": {
        "$value": 800,
        "$description": "Extra bold font weight"
      }
    },
    "fontStyle": {
      "italic": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "fontStyle",
            "$value": "italic"
          }
        },
        "$description": "Italic font style"
      }
    },
    "fontPosition": {
      "subscript": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "fontPosition",
            "$value": "sub"
          }
        },
        "$description": "Subscript vertical alignment"
      },
      "superscript": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "fontPosition",
            "$value": "super"
          }
        },
        "$description": "Superscript vertical alignment"
      }
    },
    "figureStyle": {
      "normal": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "figureStyle",
            "$value": "normal"
          }
        },
        "$description": "Normal figure style"
      },
      "oldStyleFigure": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "figureStyle",
            "$value": "oldstyle-nums"
          }
        },
        "$description": "Old-style figures with varying heights"
      },
      "liningFigures": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "figureStyle",
            "$value": "lining-nums"
          }
        },
        "$description": "Lining figures with uniform height"
      }
    },
    "textDecoration": {
      "underline": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "textDecoration",
            "$value": "underline solid"
          }
        },
        "$description": "Solid underline decoration"
      },
      "strikethrough": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "textDecoration",
            "$value": "line-through"
          }
        },
        "$description": "Strikethrough decoration"
      }
    },
    "letterCase": {
      "default": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "letterCase",
            "$value": "normal"
          }
        },
        "$description": "Default letter case"
      },
      "smallcaps": {
        "$extensions": {
          "com.canonical.typography": {
            "$type": "letterCase",
            "$value": "small-caps"
          }
        },
        "$description": "Small capitals letter case"
      }
    }
  }
}
